<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bildapp.MainPage">

    <StackLayout
        Background="white">
        <Image Source="Banner.png"
                   VerticalOptions="Start">

            </Image>
        <StackLayout
            Orientation="Vertical"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="EndAndExpand">
            
            <Button
                Margin="20,0,20,30"
                HeightRequest="60"
                BackgroundColor="#303F9F"
                TextColor="White"
                Text="Sign in"
                VerticalOptions="End"
                HorizontalOptions="FillAndExpand"
                Clicked="Login"
                ></Button>
            <Button
                Margin="20,0,20,140"
                HeightRequest="60"
                BackgroundColor="SteelBlue"
                TextColor="White"
                Text="Sign up"
                VerticalOptions="End"
                HorizontalOptions="FillAndExpand"
                Clicked="Signup"
                ></Button>
        </StackLayout>
    </StackLayout>

</ContentPage>
